{
  "manifest_version": 3,
  "name": "Resume Studio",
  "version": "2.0.0",
  "description": "AI-powered resume and cover letter generator with iOS 26 Liquid Glass design",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "downloads"
  ],
  
  "host_permissions": [
    "http://localhost:8787/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "",
    "default_title": "Open Cover Letter Generator"
  }
}
